<script type="text/javascript">
document.getElementById("search").className = "active";
</script>
<div class="container"> 
  <div class="col-sm-12">
  <div class="row">   
    <div class="col-sm-6">
        <div class="row"> 
          <% WebNews.forEach( function(model) { 
            if(model.highlighted=="checked")
            star="glyphicon glyphicon-star";
            else star="glyphicon glyphicon-star-empty";%>
          <div class="panel panel-default" style="height:200px;">
            <div class="panel-heading" style="overflow:hidden;">
               <nobr><span class="<%=star%>" aria-hidden="true"></span><a style="color:black;text-decoration:none;" href="/../WebNews/view/<%=model.id%>">
                <b><%=model.name%></b></a></nobr>
            </div>
            
            <div class="panel-body" >
              <div class="row"> 
                <div class="col-xs-4">
                <a style="color:black;text-decoration:none;" href="/../WebNews/view/<%=model.id%>">
                   <img src="<%=model.image%>" style="max-width:100%;height:135px;object-fit:cover;display:block; margin:auto;" class="img-rounded"/>
                </a>
                </div>
                <div class="col-xs-8">
                
                  <a style="color:black;text-decoration:none;" href="/../WebNews/view/<%=model.id%>">
                    <p style="min-height:140px;max-height:140px;overflow:hidden;">
                    <%=model.shortDes%></p>
                  </a>
                </div>
            </div>
            </div>
          </div>
        <% }); %>
        </div>

      </div>
      
    
    <div class="col-sm-6"> 
      <nav>
        <ul class="pagination">
          <li>
            <a href="/WebNews/search/?page=<%=Math.max(current-1, 1)%>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
        <% for (i = 1; i <= count; i++) { %>
          <li><a href="/WebNews/search/?page=<%=i%>"> <%=i%> </a></li>
        <%}%>
 
          <li>
            <a href="/WebNews/search/?page=<%=Math.min(current*1+1, count)%>" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
