<h2 class="col-sm-offset-1">Search for Events</h2>
<form action="/WebNews/goSearch" method="GET" class="form-horizontal">
  <div class="form-group">
    <label class="control-label col-sm-4">Event Name: </label>
    <div class="col-sm-8">
      <input class="form-control" name="name" type="text">
    </div>
  </div>


  <div class="form-group">
    <label class="control-label col-sm-4">Venue: </label>
    <div class="col-sm-8">
      <select class="form-control" name="venue">
          <option value="">Select Venue Here</option>
          <option>AC Hall</option>
          <option>SWT501</option>
          <option>RRS638</option>
          <option>AAB201</option>
        </select>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-4">Organizer: </label>
    <div class="col-sm-8">
      <select class="form-control" name="organizer">
          <option value="">Select Organizer Here</option>
          <option>Computer Science</option>
          <option>Music Society</option>
          <option>Government and International Studies</option>
          <option>Academic of Film</option>
        </select>
    </div>
  </div>

  <div class="form-group">
    <label class="control-label col-sm-4">Date: </label>
    <div class="col-sm-8">
      <input class="form-control" name="date" type="date" >
    </div>
  </div>
  <div class="form-group">
    <label class="control-label col-sm-4"></label>
    <div class="col-sm-8">
      <button class="btn btn-default" type="submit" value="ADD">  Submit
  </button>
    </div>
  </div>
  
</form>


